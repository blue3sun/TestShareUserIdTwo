<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.monkey.testshareuseridtwo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHAREUSERID TWO"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="回到第一个app的Activity" />
        <Button
            android:id="@+id/btn_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="改变私有变量的值" />
        <Button
            android:id="@+id/btn_sharedpreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sharedpreference" />
    </LinearLayout>

</RelativeLayout>
